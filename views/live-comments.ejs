<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Comments & Gifts</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        /* Style adjustments for larger text and full-page fit */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #1a202c;
        }

        .container {
            width: 90%;
            height: 90%;
            display: flex;
            gap: 2rem;
            flex-direction: row;
        }

        .section {
            flex: 1;
            background-color: #2d3748;
            border-radius: 0.5rem;
            overflow-y: auto;
            padding: 1rem;
        }

        .section h2 {
            font-size: 2rem;
            color: #f7fafc;
            margin-bottom: 1rem;
        }

        .content {
            font-size: 1.5rem;
            line-height: 2rem;
            color: #edf2f7;
        }

        .content::-webkit-scrollbar {
            width: 10px;
        }

        .content::-webkit-scrollbar-thumb {
            background-color: #4a5568;
            border-radius: 5px;
        }

        .content::-webkit-scrollbar-thumb:hover {
            background-color: #718096;
        }

        .not-live {
            font-size: 2rem;
            color: #e53e3e;
            text-align: center;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Comments Section -->
        <div class="section">
            <h2>Comments</h2>
            <div id="comments" class="content">
                <!-- Comments will be dynamically added here -->
            </div>
        </div>

        <!-- Gifts Section -->
        <div class="section">
            <h2>Gifts</h2>
            <div id="gifts" class="content">
                <!-- Gifts will be dynamically added here -->
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Display new comments in real time
        socket.on('tiktok-chat', (data) => {
            const commentsDiv = document.getElementById('comments');
            const commentItem = document.createElement('div');
            commentItem.className = 'p-2 border-b border-gray-600';
            commentItem.innerHTML = `<strong>${data.uniqueId}:</strong> ${data.comment}`;
            commentsDiv.appendChild(commentItem);
            commentsDiv.scrollTop = commentsDiv.scrollHeight; // Scroll to the latest comment
        });

        // Display new gifts in real time
        socket.on('tiktok-gift', (data) => {
            const giftsDiv = document.getElementById('gifts');
            const giftItem = document.createElement('div');
            giftItem.className = 'p-2 border-b border-gray-600';
            giftItem.innerHTML = `<strong>${data.uniqueId}</strong> sent <em>${data.giftName}</em> x${data.repeatCount}`;
            giftsDiv.appendChild(giftItem);
            giftsDiv.scrollTop = giftsDiv.scrollHeight; // Scroll to the latest gift
        });

        // Handle user not live
        socket.on('not-live', (data) => {
            document.body.innerHTML = `<div class="not-live">${data.message}</div>`;
        });
    </script>
</body>
</html>
